<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <title>{% block title %} {{ user_var.project_name }}{% endblock %}</title>
    <link href="{{ path_static }}css/zstyle.css" rel="stylesheet" type="text/css" media="screen"/>
    <link href="{{ path_static }}css/forms.css" rel="stylesheet" type="text/css" media="screen"/>
    <!--[if lte IE 6]>
    <link href="{{ path_static }}css/msie.css" type="text/css" rel="stylesheet" media="screen,projection"/>
    <![endif]-->
    {% block headtags %}
    <script src="{{ path_url }}/vendor/components/jquery/jquery.js" type="text/javascript"></script>
    {% endblock %}
</head>

<body>
<div id="contentheader">
    {% block contentheader %}
        <div id="banner">
            <img src="{{ path_static }}images/logo.gif" id="logo"/>

            <div id="search">
                <form class="frmsearch" method="post" id="frmsearch" action="">
					<span>
						<input type="text" class="search" onclick="this.value=''" value="Search" name="search"
                               id="insearch">
						<input type="submit" class="btnsearch" value="Search" id="submit" name="submit">
					</span>
                </form>
            </div>

            <div id="navigatemenu">
                <ul id="nav">
                    <li><a href="{{ path_url_postfix }}/home">Home</a></li>

                    <li><a href="{{ path_url_postfix }}/lorem_Ipsum">Menu</a>
                        <ul>
                            <li><a href="{{ path_url_postfix }}/lorem_Ipsum">Menu Item</a></li>
                            <li><a href="{{ path_url_postfix }}/lorem_Ipsum">Menu Item</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>

        <div id="topright">
            <a href="{{ path_url_postfix }}/logout">Logout</a>
            |
            <a href="{{ path_url_postfix }}/uhome">Member Home</a>
        </div>
    {% endblock %}
</div>

<div id="contentbody">
    {% block contentbody %}
        {% for error in errors %}
            <div id="reports">{{ error }}</div>
        {% endfor %}

        {% if title %}
            <h2 class="title">
                {{ title }}
            </h2>
        {% endif %}

        {% if subtitle %}
            <div id="subtitle">{{ subtitle }}</div>
        {% endif %}

        {% if body %}
            <div class="body">{{ body|raw }}</div>
        {% endif %}
    {% endblock %}
</div>

<div id="footer">
    <p>
        &copy; 2015 <a href="http://www.articulatelogic.com/">ArticulateLogic.com</a>
        | Design: <a href="mailto:aazhbd@yahoo.com">aazhbd</a>
    </p>
</div>
</body>
</html>

