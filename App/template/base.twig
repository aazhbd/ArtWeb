<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
{% block head %}
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>{% block title %}{% endblock %}</title>
    <link href="{{ static_path }}css/forms.css" rel="stylesheet" type="text/css" media="screen" />
    <link href="{{ static_path }}css/zstyle.css" rel="stylesheet" type="text/css" media="screen" />
    <!--[if lte IE 6]>
    <link href="{{ static_path }}css/msie.css" rel="stylesheet" type="text/css" media="screen" />
    <![endif]-->
    <script type="text/javascript" src="{{ static_path }}js/"></script>
{% endblock %}
</head>

<body>
    <div id="contentheader">
    {% block contentheader %}
        <div id="banner">
            <img src="{{ static_path }}images/logo.gif" id="logo" />

			<div id="search">
                <form class="frmsearch" method="post" id="frmsearch" action="">
                    <span>
                        <input type="text" class="search" onclick="this.value=''" value="Search" name="search" id="insearch">
                        <input type="image" class="btnsearch" value="Search" id="submit" name="submit">
                    </span>
                </form>
            </div>

            <div id="navigatemenu">
                <ul id="nav">
                    <li><a href="{{ root_url }}/home">Home</a></li>
                    <li><a href="{{ root_url }}/lorem_Ipsum">Second Menu</a>
                        <ul>
                            <li><a href="{{ root_url }}/lorem_Ipsum">Menu Item 1</a></li>
                            <li><a href="{{ root_url }}/lorem_Ipsum">Menu Item 2</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>

        <div id="topright">
            <a href="{{ root_url }}/logout">Logout</a> | <a href="{{ root_url }}/uhome">Member Home</a>
        </div>
    {% endblock %}
    </div>
    
    <div id="contentbody">
    {% block contentbody %}
        {% for error in errors %}
            <div id="reports">{{ error }}</div>
        {% endfor %}
        
        {% if title %}
        <h2 class="title">
            {{ title }}
		</h2>
		{% endif %}

        {% if body %}
            <div class="body">{{ body|raw }}</div>
        {% endif %}
        <div class="body">
            {% for b in bodies %}
                <div id="subtitle">{{ b }}</div>
            {% endfor %}
        </div>
    {% endblock %}
    </div>
    
    <div id="footer">
    {% block footer %}
        <p>
            &copy; 2015 <a href="http://www.articulatelogic.com/">ArticulateLogic.com</a> | Design: <a href="mailto:aazhbd@yahoo.com">aazhbd</a>
        </p>
    {% endblock %}
    </div>
    
</body>
</html>

